# Root EditorConfig declaration
root = true

# --- Symbolic .picl files ---
[*.picl]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Optional symbolic extensions
[*.sigil]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.txt]
end_of_line = lf
insert_final_newline = true
